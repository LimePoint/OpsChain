#!/usr/bin/env bash
set -eo pipefail

working_dir="$(pwd)"

# change to the directory containing the docker-compose.yml and the .env
CDPATH='' cd -- "$(dirname -- "${BASH_SOURCE[0]}")"
cd ..

exec docker-compose run --rm -v "${working_dir}:/opt/opschain" --entrypoint=/usr/bin/container_start.sh opschain-runner-devenv /bin/bash
