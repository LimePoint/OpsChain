#!/usr/bin/env bash
set -eo pipefail

export WORKING_DIR="$(pwd)"

if ! [ -e .opschainrc ] && [ -e ~/.opschainrc ]; then
  export OPSCHAINRC=~/.opschainrc
else
  export OPSCHAINRC="${WORKING_DIR}/.opschainrc"
fi

# change to the directory containing the docker-compose.yml and the .env
CDPATH='' cd -- "$(dirname -- "${BASH_SOURCE[0]}")"
cd ..

exec docker-compose run --rm opschain-cli "$@"
